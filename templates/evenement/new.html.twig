{% block body %}
    <section>
        <div class="container py-5">

            <div class="row">
                <div class="col-lg-3" style="margin-top: 15%;">
                    <div class=" mb-3">
                        <div class="text-center">
                            <div id="map" style="width: 100%; height: 400px;"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="add_new_group_header">
