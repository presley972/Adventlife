                    e.stopImmediatePropagation();
                    e.preventDefault();
                    console.log('ici la mon gars');
                    var form = $(document).find('form')[0];
                    console.log(form)
                    var url = "{{ path('group_new') }}";
                    var data = new FormData(form);
