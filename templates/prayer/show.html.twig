{% extends 'base.html.twig' %}

{% block title %}Prayer{% endblock %}

{% block body %}
    <h1>Prayer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prayer.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ prayer.createdAt ? prayer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ prayer.modifiedAt ? prayer.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ prayer.description }}</td>
            </tr>
            <tr>
                <th>Security</th>
                <td>{{ prayer.security ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('prayer_index') }}">back to list</a>

    <a href="{{ path('prayer_edit', {'id': prayer.id}) }}">edit</a>

    {{ include('prayer/_delete_form.html.twig') }}
{% endblock %}
